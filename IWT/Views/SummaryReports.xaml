<UserControl x:Class="IWT.Views.SummaryReports"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IWT.Views" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border BorderThickness="0,0,0,1" BorderBrush="LightGray">
                            <Grid Name="TabPanel">
                                <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabPanel" Property="Background" Value="#FFDE1717" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <!--<Setter Property="Foreground" Value="Green"/>-->
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="TabPanel" Property="Background" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <materialDesign:DialogHost Identifier="ReportDialog">

        <Grid>
            <TabControl  BorderThickness="0" Name="ReportTabControl" materialDesign:ShadowAssist.ShadowDepth="Depth5" SelectionChanged="ReportTabControl_SelectionChanged">
                <TabItem HorizontalAlignment="Left" x:Name="GenerateReportTabItem" Uid="1"  Height="50" Width="290" materialDesign:ShadowAssist.ShadowDepth="Depth5" Background="LightGray" >
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Source="/Assets/Icons/Report_Icon.png" VerticalAlignment="Center" Width="40" Margin="0 0 10 0"/>
                            <Label VerticalAlignment="Center" x:Name="GenerateReportLabel" >Generate Report</Label>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <materialDesign:Card Grid.Row="0" Height="70" VerticalAlignment="Top" Margin="0 10 0 0">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <StackPanel Width="250" Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/Select_Template.png" VerticalAlignment="Center" Width="40" Margin="40 0 20 0"/>
                                    <Label VerticalAlignment="Center" Margin="0 0 20 0">Select Template</Label>
                                </StackPanel>
                                <ComboBox x:Name="TemplateComboBox"  Style="{DynamicResource MaterialDesignOutlinedComboBox }"
                          Width="250" DisplayMemberPath="ReportName" SelectedValuePath="TemplateID" SelectionChanged="TemplateComboBox_SelectionChanged" />
                                <Button Margin="30 0 0 0" x:Name="LaunchBtn" BorderBrush="#FF343138" Background="#FF5C5961"
                             HorizontalAlignment="Right" Click="LaunchBtn_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Assets/Icons/Launch_Wizard.png" Grid.Row="1" Width="20" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                                        <TextBlock Grid.Column="1" Padding="10 0 0 0" Text="Launch Report Designer"/>
                                    </Grid>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>
                        <materialDesign:Card Grid.Row="1" Height="320" Margin="0 10 0 0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Border BorderBrush="Black" BorderThickness="1" x:Name="DateBorder" MouseLeftButtonDown="DateBorder_MouseLeftButtonDown"
                                            IsEnabled="False">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" Height="80">
                                            <!--<Label>Hi</Label>-->
                                            <!--<RadioButton x:Name="DateRadioButton1" VerticalAlignment="Center" Click="DateRadioButton1_Click"  Checked="DateRadioButton_Checked" Unchecked="DateRadioButton_Checked" />-->
                                            <RadioButton GroupName="A" x:Name="DateRadioButton" VerticalAlignment="Center" Checked="DateRadioButton_Checked" Unchecked="DateRadioButton_Checked"
                                                         IsEnabled="False"/>
                                            <!--<RadioButton></RadioButton>-->
                                            <Image Source="/Assets/Icons/calendar_80.png" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="-15 0 0 0"/>
                                            <TextBlock x:Name="FromDateTextBlock" VerticalAlignment="Center">From Date</TextBlock>
                                            <DatePicker x:Name="FromDatePicker" materialDesign:HintAssist.Hint="From Date" Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                      HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Foreground="Gray" Visibility="Collapsed" Margin="-15 0 0 0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" Height="80">
                                            <Image Source="/Assets/Icons/calendar_80.png" HorizontalAlignment="Right" VerticalAlignment="Center" />
                                            <TextBlock x:Name="ToDateTextBlock" VerticalAlignment="Center">To Date</TextBlock>
                                            <DatePicker x:Name="ToDatePicker" materialDesign:HintAssist.Hint="To Date" Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                      HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Foreground="Gray" Visibility="Collapsed" Margin="-15 0 0 0"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" x:Name="RangeBorder">
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" Height="80">
                                            <RadioButton GroupName="B" Margin="10 0 0 0" x:Name="RangeRadioButton" VerticalAlignment="Center" Checked="RangeRadioButton_Checked" Unchecked="RangeRadioButton_Checked"
                                                         IsEnabled="False"/>
                                            <!--<Image Source="/Assets/Icons/calendar_80.png" HorizontalAlignment="Right" VerticalAlignment="Center" />-->
                                            <TextBlock x:Name="RangeTextBlock" VerticalAlignment="Center" Margin="30 0 0 0">Pick A Range</TextBlock>
                                            <ComboBox Margin="26 0 0 0" x:Name="RangeComboBox" VerticalAlignment="Center" Width="200" Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                                  Visibility="Collapsed" materialDesign:HintAssist.Hint="Select Range" SelectionChanged="RangeComboBox_SelectionChanged">
                                                <ComboBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <VirtualizingStackPanel />
                                                    </ItemsPanelTemplate>
                                                </ComboBox.ItemsPanel>
                                            </ComboBox>
                                            <!--<DatePicker x:Name="FromDatePicker" materialDesign:HintAssist.Hint="From Date" Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                      HorizontalAlignment="Left" VerticalAlignment="Center" Width="250" Foreground="Gray" Visibility="Collapsed"/>-->
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1" x:Name="TransactionBorder">
                                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" Height="70">
                                            <Image Source="/Assets/Icons/Transaction.png" Width="46" Height="64" VerticalAlignment="Center" Margin="0 0 10 0"/>

                                            <ComboBox x:Name="TransactionTypeComboBox" Style="{DynamicResource MaterialDesignOutlinedComboBox}" 
                                                  materialDesign:HintAssist.Hint="Transaction Type" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200"
                                                  DisplayMemberPath="Description" SelectedValuePath="TransactionType" SelectionChanged="TransactionTypeComboBox_SelectionChanged">
                                                <ComboBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <VirtualizingStackPanel />
                                                    </ItemsPanelTemplate>
                                                </ComboBox.ItemsPanel>
                                            </ComboBox>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1" x:Name="MaterialBorder">
                                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" Height="70">
                                            <Image Source="/Assets/Icons/material.png" Width="46" Height="64" VerticalAlignment="Center" Margin="0 0 10 0"/>

                                            <ComboBox x:Name="MaterialComboBox" Style="{DynamicResource MaterialDesignOutlinedComboBox}" HorizontalAlignment="Left" 
                                                  materialDesign:HintAssist.Hint="Material" VerticalAlignment="Center" Width="200" DisplayMemberPath="MaterialName" SelectedValuePath="MaterialName"
                                                  SelectionChanged="MaterialComboBox_SelectionChanged">

                                                <ComboBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <VirtualizingStackPanel />
                                                    </ItemsPanelTemplate>
                                                </ComboBox.ItemsPanel>
                                            </ComboBox>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="1" x:Name="SupplierBorder">
                                        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" Height="70">
                                            <Image Source="/Assets/Icons/supplier.png" Width="46" Height="64" VerticalAlignment="Center" Margin="0 0 10 0"/>

                                            <ComboBox x:Name="SupplierComboBox" Style="{DynamicResource MaterialDesignOutlinedComboBox}" HorizontalAlignment="Left" 
                                                  materialDesign:HintAssist.Hint="Supplier" VerticalAlignment="Center" Width="200" DisplayMemberPath="SupplierName" SelectedValuePath="SupplierName"
                                                  SelectionChanged="SupplierComboBox_SelectionChanged">
                                                <ComboBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <VirtualizingStackPanel />
                                                    </ItemsPanelTemplate>
                                                </ComboBox.ItemsPanel>
                                            </ComboBox>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="1" x:Name="ShiftBorder">
                                        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" Height="70">
                                            <Image Source="/Assets/Icons/Shift_80.png" Width="46" Height="64" VerticalAlignment="Center" Margin="0 0 10 0"/>

                                            <ComboBox x:Name="ShiftComboBox" Style="{DynamicResource MaterialDesignOutlinedComboBox}" HorizontalAlignment="Left" 
                                                  materialDesign:HintAssist.Hint="Shift" VerticalAlignment="Center" Width="200" DisplayMemberPath="ShiftName" SelectedValuePath="ShiftName"
                                                  SelectionChanged="ShiftComboBox_SelectionChanged">
                                                <ComboBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <VirtualizingStackPanel />
                                                    </ItemsPanelTemplate>
                                                </ComboBox.ItemsPanel>
                                            </ComboBox>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="1" BorderBrush="Black" BorderThickness="1" x:Name="VehicleBorder">
                                        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" Height="70">
                                            <Image Source="/Assets/Icons/vehicle_master.png" Width="46" Height="64" VerticalAlignment="Center" Margin="0 0 10 0"/>

                                            <TextBox x:Name="TruckNoText" Style="{DynamicResource MaterialDesignOutlinedTextBox}" HorizontalAlignment="Left" 
                                                  materialDesign:HintAssist.Hint="Truck No" VerticalAlignment="Center" Width="200">
                                            </TextBox>
                                        </StackPanel>
                                    </Border>
                                    <ScrollViewer Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="3" x:Name="dynamicWrapPanelContainer"
                                                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden" Visibility="Collapsed">
                                        <WrapPanel x:Name="dynamicWrapPanel" Background="White" 
                                           Orientation="Vertical" Height="200" Visibility="Collapsed"/>
                                    </ScrollViewer>
                                </Grid>

                            </ScrollViewer>
                        </materialDesign:Card>
