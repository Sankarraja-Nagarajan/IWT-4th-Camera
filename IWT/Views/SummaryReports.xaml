                                              DisplayMemberPath="FieldName" SelectedValuePath="FieldName" Visibility="Collapsed"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="/Assets/Icons/Grouping.png" Grid.Row="1" Width="20" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                                    <Label VerticalAlignment="Center" Margin="10 0">L2</Label>
                                    <ComboBox x:Name="GroupCondtion2" Style="{StaticResource MaterialDesignOutlinedComboBox}" Width="150"
                                              materialDesign:HintAssist.Hint="Select" SelectionChanged="GroupCondtion2_SelectionChanged"
                                              DisplayMemberPath="FieldName" SelectedValuePath="FieldName" Visibility="Collapsed" IsEnabled="False"/>
                                </StackPanel>
                                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="/Assets/Icons/Grouping.png" Grid.Row="1" Width="20" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                                    <Label VerticalAlignment="Center" Margin="10 0">L2</Label>
                                    <ComboBox x:Name="GroupCondtion3" Style="{StaticResource MaterialDesignOutlinedComboBox}" Width="150"
                                              materialDesign:HintAssist.Hint="Select" SelectionChanged="GroupCondtion3_SelectionChanged"
                                              DisplayMemberPath="FieldName" SelectedValuePath="FieldName" Visibility="Collapsed" IsEnabled="False"/>
                                </StackPanel>
                            </Grid>

                        </materialDesign:Card>
                        <materialDesign:Card Grid.Row="3" Height="60" VerticalAlignment="Top" Margin="0 10 0 0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button Grid.Column="2" Grid.Row="2" Margin="10" x:Name="GenerateBtn" BorderBrush="#FF343138" Background="#FF5C5961"
                             HorizontalAlignment="Right" Width="120" IsEnabled="False" Click="GenerateBtn_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Assets/Icons/Generate.png" Grid.Row="1" Width="20" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                                        <TextBlock Grid.Column="1" Padding="10 0 0 0" Text="Generate"/>
                                    </Grid>
                                </Button>
                                <Button Grid.Column="2" Grid.Row="2" Margin="10" x:Name="SaveCriteriaBtn" BorderBrush="#FF343138" Background="#FF5C5961"
                             HorizontalAlignment="Right" Width="145" IsEnabled="False">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Assets/Icons/Save.png" Grid.Row="1" Width="20" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                                        <TextBlock Grid.Column="1" Padding="10 0 0 0" Text="Save Criteria"/>
                                    </Grid>
                                </Button>
                                <Button Grid.Column="2" Grid.Row="2" Margin="10" x:Name="CancelBtn" BorderBrush="#FF343138" Background="#FF5C5961"
                             HorizontalAlignment="Right" Width="110" Click="CancelBtn_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Assets/Icons/Cancel.png" Grid.Row="1" Width="20" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                                        <TextBlock Grid.Column="1" Padding="10 0 0 0" Text="Cancel"/>
                                    </Grid>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>

