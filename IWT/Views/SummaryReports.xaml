                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="/Assets/Icons/Grouping.png" Grid.Row="1" Width="20" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                                    <Label VerticalAlignment="Center" Margin="10 0">L1</Label>
                                    <ComboBox x:Name="GroupCondtion1" Style="{StaticResource MaterialDesignOutlinedComboBox}" Width="150"
